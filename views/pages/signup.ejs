<%- include('../partials/head') -%> 
<%- include('../partials/nav') -%> 

    <section class="content">
<!-- Form Troubleshooting -->
<div class="form-container">
    <form method="POST" action="/signup">
        <h1>Sign Up</h1>
        <div>
            <label for="Username">Username: </label>
            <input name="username" placeholder="Username" type="text" required>
        </div>
        <div>
            <label for="Email:">Email: </label>
            <input name="email" placeholder="Email" type="email" required>
        </div>
        <div>
            <label for="Password:">Password: </label>
            <input name="password" placeholder="Password" type="password" minlength="10" required>
        </div>
        <div>
            <label for="Occupation">Occupation/Hobby: </label>
            <select name="occupation" id="Occupation" required>
                <option value="" disabled selected>Select Occupation</option>
                <option value="Musician">Musician</option>
                <option value="Producer">Producer</option>
                <option value="Singer">Singer</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div>
            <label for="Genre">Genre: </label>
            <input name="genre" placeholder="What's Your Genre of Preference?" type="text" required>
        </div>
        <div>
            <label for="Description">Description: </label>
            <textarea name="description" placeholder="Tell Us About You:" id="Description" cols="30" rows="10" required></textarea>
        </div>
        <button type="submit">Create Account</button>
    </form>
</div>
</section>

<!-- Footer -->
<%- include('../partials/footer') -%> 
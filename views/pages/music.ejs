<%- include('../partials/musichead') -%> 
<%- include('../partials/nav') -%> 
    <section class="content columns">
    <h1>Music</h1>
    <h2>Check Out Some Cool Music From Our Members</h2>
        <audio controls class="locked-audio" id="audioPlayer">
            <source src="" type="audio/mpeg">
        </audio>


    <a class="songName" href="/music/Hopeful.mp3">
        <div class="song" id="song1">
            <i class="fas fa-play fa-lg"></i>
            <h3>Hopeful</h3>
            <p>By Forte Boss</p>
        </div>
    </a>

    <a class="songName" href="/music/JoyToTheWorld.mp3">
        <div class="song" id="song2">
            <i class="fas fa-play fa-lg"></i>
            <h3>Joy To The World</h3>
            <p>By Forte Boss</p>
        </div>
    </a>
    <% songs.forEach(song => { %>
        <a class="songName" href="<%= song.filename %>">
            <div class="song" id="song2">
                <i class="fas fa-play fa-lg"></i>
                <h3><%= song.title %></h3>
                <p><%= song.username %></p>
            </div>
        </a>
    <% }) %>
    <a href="/upload" class="click-me">Add Your Own Music!</a>
    </section>
<!-- Footer -->
<%- include('../partials/footer') -%>